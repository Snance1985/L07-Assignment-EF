@model IEnumerable<l07_assignment.Models.Job>

@{
    ViewData["Title"] = "Resume";
}

<div class="resume-wrapper">
    <h1 class="display-4 list-title">Resume</h1>

    @foreach (var job in Model ?? new List<Job>())
    {
        <div class="job-summary row">
            <p class="job-title col-10">@job.JobTitle, @job.CompanyName</p>
            <p class="job-years col-2">@job.YearsWorked years</p>
            <p class="col-12">@job.JobDescription</p>
            <div class="col-12">   
                <a class="btn btn-sm btn-secondary mb-3 ml-3 float-end"
                    asp-controller="Job" asp-action="Delete" asp-route-id="@job.JobId">
                    Remove Job
                </a>
                <a class="btn btn-sm btn-light mb-3 float-end"
                    asp-controller="Job" asp-action="Detail" asp-route-id="@job.JobId" >
                    Edit Job
                </a>
            </div>
        </div>
    }

    <div>
        <a class="btn btn-primary mt-3 float-end" asp-controller="Job" asp-action="Add">Create New</a>
    </div>
</div>
